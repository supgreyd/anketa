.date
	display block

	.date__fill_date
		label()
		display: inline-block
		margin-bottom: 30px

	.date__fill_date-input
		display: inline-block
		position: relative
		transform: translateY(-20px)
		overflow hidden
		padding-bottom: 15px
		padding-left: 15px
		vertical-align: top

		&:before
			sprite $border
			position absolute
			content ''
			bottom: 8px

		input
			input()
			margin-left 7px
			max-width 200px


