.info
	display block
	margin-bottom: 65px

	.info__logo
		sprite $logo
		margin-left 2px

	.info__title
		sprite $delo
		margin 59px 0 53px 260px

	.info__stamp
		sprite $stamp
		position: absolute
		right: 53px
		top: 50px

	.info__list
		padding-top: 11px
		margin-bottom -1px
		overflow-x: hidden

		.info__list_element
			label()
			margin-bottom: 28px

			label
				cursor: pointer

			&:last-child
				margin-bottom: 0

			.info__list_element-text
				display: inline-block
				position: relative
				padding-left: 25px
				transform: translateY(-15px)
				width: 75%

				&:after
					content ''
					display: inline-block
					sprite $border
					position: absolute
					bottom: -15px
					left: 10px
					transform scaleY(0.80)

				input, div
					input()
					width: 100%


			#FIO
				input
					opacity 0
					position: absolute

	@media screen and (max-width: 972px)
		.info__title
			margin-x(auto)
		.info__stamp
			top: 35px

	@media screen and (max-width: 750px)
		.info__stamp
			top: 270px

		.info__logo
			margin-x(auto)

		.info__list .info__list_element
			label
				display: block
				margin-bottom: 20px

			.info__list_element-text
				width: 100%
				padding-left: 0

				input
					text-align: center



