import('sprites/*')
import('helpers/svg-size')
@import 'helpers/variables'
@import 'helpers/mixins'
@import 'helpers/fonts'
@import 'helpers/optimize'

import('../blocks/**/*')


@font-face
	font-family: 'PTSans'
	src: url('../../assets/fonts/PTSansRegular.eot')
	src: url('../../assets/fonts/PTSansRegular.ttf')
	src: url('../../assets/fonts/PTSansRegular.woff')
	font-weight: 400
	font-style: normal

@font-face
	font-family: 'PTSans'
	src: url('../../assets/fonts/PTSansBold.eot')
	src: url('../../assets/fonts/PTSansBold.ttf')
	src: url('../../assets/fonts/PTSansBold.woff')
	font-weight: 700
	font-style: bold

@font-face
	font-family: 'Courier'
	src: url('../../assets/fonts/cour.ttf')
	font-weight: 400
	font-style: normal

body
	background-color backgroundColor
	-webkit-font-smoothing antialiased
	font-family 'PTsans', sans-serif, Arial

.container
	max-width: 1000px
	width: 100%
	margin-x(auto)
	background-image: url(../../assets/images/background.png)
	background-position-y: -7px
	padding 69px 118px 15px 113px
	position: relative

@media screen and (max-width: 972px)
	.container
		padding-x(60px)

@media screen and (max-width: 750px)
	.container
		padding-x(15px)


